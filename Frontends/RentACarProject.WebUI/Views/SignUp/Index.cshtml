@model CreateSignUpDto
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Rapid Rent - User Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="User Panel" name="description" />
    <meta content="Rapid Rent" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Admin/vertical/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/Admin/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS for background image and form styling -->
    <style>
        .bg-login {
            background-image: url('/carbook-master/images/registerPhoto.jpg');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        .login-box {
            background: white;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-control-user {
            border-radius: 50px;
            height: 50px;
            padding: 15px;
            font-size: 14px;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
            border-radius: 50px;
            padding: 10px;
            width: 100%;
            font-size: 16px;
            text-transform: uppercase;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .text-muted a {
            color: #6c757d;
        }

            .text-muted a:hover {
                color: #28a745;
            }

        .text-danger {
            font-size: 0.875em;
            margin-top: 0.5rem;
        }

        .alert {
            margin-top: 20px;
        }
    </style>

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center min-vh-100">
                    <div class="login-box w-100 d-block bg-white shadow-lg rounded my-5 position-relative">
                        <div class="row">
                            <div class="col-lg-5 d-none d-lg-block bg-login rounded-left">
                            </div>
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center mb-5">
                                        <a href="/Default/Index/" class="text-dark font-size-22 font-family-secondary">
                                            <i class="mdi mdi-alpha-x-circle"></i> <b>Rapid Rent</b>
                                        </a>
                                    </div>
                                    <h1 class="h5 mb-1">Welcome</h1>
                                    <p class="text-muted mb-4">Enter your information to access the User Panel.</p>

                                    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @Html.Raw(TempData["Message"])
                                        </div>
                                    }

                                    <form class="user" method="post">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="exampleInputEmail" placeholder="Your Email Address" asp-for="Email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Your Password" asp-for="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <button class="btn btn-success btn-block waves-effect waves-light">Log In</button>
                                    </form>
                                    <div class="row mt-4">
                                        <div class="col-12 text-center">
                                            <p class="text-muted mb-0">Did you forget your password? <a href="/Login/ChangePassword/" class="text-muted font-weight-medium ml-1"><b>Change Your Password</b></a></p>
                                            <p class="text-muted mb-0">Don't have an account? <a href="/Register/CreateAppUser/" class="text-muted font-weight-medium ml-1"><b>Create an Account</b></a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div> <!-- end row -->
                    </div> <!-- end login-box -->
                </div> <!-- end d-flex -->
            </div>
        </div> <!-- end row -->
    </div> <!-- end container -->
    <!-- jQuery  -->
    <script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="~/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/Admin/vertical/assets/js/waves.js"></script>
    <script src="~/Admin/vertical/assets/js/simplebar.min.js"></script>
    <script src="~/Admin/vertical/assets/js/theme.js"></script>

    <!-- Validation Scripts -->
    <script src="~/Admin/vertical/assets/js/jquery.validate.min.js"></script>
    <script src="~/Admin/vertical/assets/js/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>
