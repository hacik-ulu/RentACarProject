@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Car Reservation Form</h3>
        <br />
        <input type="hidden" asp-for="CarID" value="@ViewBag.v3" class="form-control" placeholder="Car You Want to Pick Up">
        <div class="form-group">
            <label>Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Your Name">
        </div>
        <div class="form-group">
            <label>Surname</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="Your Surname">
        </div>
        <div class="form-group">
            <label>Email Address</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Your Email">
        </div>
        <div class="form-group">
            <label>Contact Number</label>
            <input type="text" asp-for="Phone" class="form-control" placeholder="Your Contact Number">
        </div>
        <div class="form-group">
            <label>Pick Up Location</label>
            @Html.DropDownListFor(x => x.DropOffLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Drop Off Location</label>
            @Html.DropDownListFor(x => x.PickUpLocationID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Age</label>
            <input type="text" asp-for="Age" class="form-control" placeholder="Your Age">
        </div>
        <div class="form-group">
            <label>Driver License Year</label>
            <input type="text" asp-for="DriverLicenseYear" class="form-control" placeholder="Year of Driver's License">
        </div>
        <div class="form-group">
            <label>Your Requests</label>
            <textarea asp-for="Description" id="" cols="30" rows="7" class="form-control" placeholder="Any Additional Requests"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Complete Reservation" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>