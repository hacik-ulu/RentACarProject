@model CreateBrandDto
@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">New Brand Entry</h4>
                        <p class="card-subtitle mb-4">Please fill in the fields below completely. Be sure to press "Create Brand".</p>
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input type="text" class="form-control" asp-for="Name">
                                <span asp-validation-for="Name" class="text-danger"></span> @* validation for Brands name. *@
                            </div>

                            <button type="submit" class="btn btn-primary">Create Brand</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
