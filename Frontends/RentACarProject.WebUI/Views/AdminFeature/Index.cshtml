@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Features List</h4>
                        <p class="card-subtitle mb-4">
                            You can add new features related to cars (such as air conditioning, Bluetooth, audio, electric, etc.), edit existing features, and remove a feature from here.To ensure data consistency in the theme, enter data in multiples of three.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Feature</th>
                                        <th>Remove</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><a href="/AdminFeature/RemoveFeature/@item.FeatureID" class="btn btn-outline-danger">Remove</a></td>
                                                <td><a href="/AdminFeature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Update</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <script>
                                            $(document).ready(function () {
                                                Swal.fire({
                                                    icon: "error",
                                                    title: "Oops...",
                                                    text: "No features found!",
                                                });
                                            });
                                        </script>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/AdminFeature/CreateFeature/" class="btn btn-outline-dark">Create New Feature</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
