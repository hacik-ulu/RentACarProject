@model GetBlogById
<div class="col-md-8 ftco-animate">

    @*Viewbag will be. *@
    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Description</p>

    @await Component.InvokeAsync("_BlogDetailCloudTagByBlogComponentPartial", new { id = ViewBag.BlogID })

    @await Component.InvokeAsync("_BlogDetailsAuthorAboutComponentPartial")


    <div class="pt-5 mt-5">
        <h3 class="mb-5">Comments</h3>

        @await Component.InvokeAsync("_CommentListByBlogComponentPartial")

        @await Component.InvokeAsync("_AddCommentComponentPartial")

    </div>

</div>

