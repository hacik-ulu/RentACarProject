@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<header id="page-topbar">
    <div class="navbar-header">

        <div class="d-flex align-items-left">
            <button type="button" class="btn btn-sm mr-2 d-lg-none px-3 font-size-16 header-item waves-effect" id="vertical-menu-btn">
                <i class="fa fa-fw fa-bars"></i>
            </button>

            <div class="dropdown d-none d-sm-inline-block">
                <button type="button" class="btn header-item waves-effect" id="page-header-user-dropdown"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="mdi mdi-plus"></i> Create New
                    <i class="mdi mdi-chevron-down d-none d-sm-inline-block"></i>
                </button>
                <div class="dropdown-menu">

                    <!-- item-->
                    <a href="/Admin/AdminCar/CreateCar/" class="dropdown-item notify-item">
                        Add New Car
                    </a>

                    <!-- item-->
                    <a href="/Admin/AdminBrand/CreateBrand/" class="dropdown-item notify-item">
                        Add New Brand
                    </a>

                </div>
            </div>
        </div>

        <div class="d-flex align-items-center">
            <div class="dropdown d-inline-block">
                <div class="dropdown d-inline-block ml-2">
                    <button type="button" class="btn header-item waves-effect" id="page-header-user-dropdown"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img class="rounded-circle header-profile-user" src="~/Admin/vertical/assets/images/users/avatarImage.png"
                             alt="Header Avatar">
                        <span class="d-none d-sm-inline-block ml-1">Admin</span>
                        <i class="mdi mdi-chevron-down d-none d-sm-inline-block"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">                       
                        <a class="dropdown-item d-flex align-items-center justify-content-between" href="/Login/GetAdminDetailsById/@(HttpContextAccessor.HttpContext.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)">
                            <span>My Profile</span>
                            <span>
                                <span class="badge badge-pill badge-warning"></span>
                            </span>
                        </a>
                        <a class="dropdown-item d-flex align-items-center justify-content-between" href="/Login/LogOut/">
                            <span>Log Out</span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
</header>
