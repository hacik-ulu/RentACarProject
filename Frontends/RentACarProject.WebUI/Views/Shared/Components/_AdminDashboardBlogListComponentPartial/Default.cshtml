@model List<ResultLastEightBlogDto>
@{
}

<div class="col-xl-6">
    <div class="card shadow-sm">
        <div class="card-body">

            <h4 class="card-title text-primary">Latest Blogs</h4>
            <p class="card-subtitle mb-4 text-muted font-size-12">
                List of the Last 8 Blogs
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <thead>
                        <tr class="text-muted">
                            <th>Blog Title</th>
                            <th>Open Blog</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><h6 class="font-size-14 mb-1 font-weight-normal">@item.Title</h6></td>
                                <td>
                                    <a href="/Blog/BlogDetail/@item.BlogID" class="btn btn-outline-primary btn-sm" target="_blank">Open Blog</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div> 
</div>
