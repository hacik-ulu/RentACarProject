@model List<ResultFooterAddressDto>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            swal("Term and Conditions", "You can access all service conditions regarding the car rental process from the agreement documents available at our physical offices where the reservation will be made. All details regarding damages, fines, and passes (HGS, OGS, etc.) are included. We wish you pleasant journeys.");
        });

        $('#btn2').click(function () {
            swal("Security", "Our CarBook website is built on AspNet Core technology with Sha256 encryption to store data completely encrypted. JWT authentication is implemented in our system. Payment card information of our users is not stored in the system at all. Information such as TC Identification Number, Email Address, and phone are encrypted.");
        });

        $('#btn3').click(function () {
            swal("Cookie Policy", "We use browser cookies to provide you with a better service.");
        });

        $('#btn4').click(function () {
            swal("Frequently Asked Questions", "Frequently asked questions about the system are available.");
        });

        $('#btn5').click(function () {
            swal("Payment Methods", "Payment transactions are made only with cards at our physical rental points.");
        });

        $('#btn6').click(function () {
            swal("How It Works", "1. Rent Your Car \n 2. Check Your Email. \n 3. Come to Our Office.");
        });
    });
</script>

@foreach (var item in Model)
{
    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2"><a href="#" class="logo">Rapid<span>Car</span></a></h2>
                        <p>@item.Description</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">Information</h2>
                        <ul class="list-unstyled">
                            <li><a href="/About/Index/" class="py-2 d-block">About</a></li>
                            <li><a href="/Car/Index/" class="py-2 d-block">Services</a></li>
                            <li><a href="#" id="btn1" class="py-2 d-block">Term and Conditions</a></li>
                            <li><a href="#" id="btn2" class="py-2 d-block">Security</a></li>
                            <li><a href="#" id="btn3" class="py-2 d-block">Privacy &amp; Cookies Policy</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Customer Support</h2>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Index", "FAQ")" id="btn4" class="py-2 d-block">FAQ</a></li>
                            <li><a href="#" id="btn5" class="py-2 d-block">Payment Option</a></li>
                            <li><a href="/CarPricing/Index/" class="py-2 d-block">Booking Tips</a></li>
                            <li><a href="#" id="btn6" class="py-2 d-block">How It Works</a></li>
                            <li><a href="/Contact/Index/" class="py-2 d-block">Contact Us</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Have a Questions?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><span class="icon icon-phone"></span><span class="text">@item.Phone</span></li>
                                <li><span class="icon icon-envelope"></span><span class="text">@item.Address</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">

                    <p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart color-danger" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                </div>
            </div>
        </div>
    </footer>

}
