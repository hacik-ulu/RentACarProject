@using System.Globalization

@model List<ResultCommentDto>

<style>
    .comment-list .vcard.bio img {
        width: 24px; /* İstediğiniz genişlik */
        height: 24px; /* İstediğiniz yükseklik */
    }
</style>

<ul class="comment-list">
    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                <img src="@Url.Content("~/carbook-master/images/comment.jpg")" alt="Yorum resmi">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@item.CreatedDate.ToString("dd - MMM - yyyy", new CultureInfo("en-US"))</div>
                <p>@item.Description</p>
            </div>
        </li>
    }
</ul>
