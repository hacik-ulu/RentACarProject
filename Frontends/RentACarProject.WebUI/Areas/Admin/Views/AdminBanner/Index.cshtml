@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Home Page Banner Area</h4>
                        <p class="card-subtitle mb-4">
                            You can add new banner, edit existing banner, and remove a banner from here.To ensure data consistency in the theme, please enter only one banner data.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Video URL</th>
                                        <th>Video Description</th>
                                        <th>Remove</th>
                                        <th>Update</th>
                                        <th>Watch from Youtube</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>
                                                <td>@item.VideoUrl</td>
                                                <td>@item.VideoDescription</td>
                                                <td><a href="/Admin/AdminBanner/RemoveBanner/@item.BannerID" class="btn btn-outline-danger">Remove</a></td>
                                                <td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerID" class="btn btn-outline-success">Update</a></td>
                                                <td><a href="#" class="btn btn-outline-success">Go to Video</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <script>
                                            $(document).ready(function () {
                                                Swal.fire({
                                                    icon: "error",
                                                    title: "Oops...",
                                                    text: "No Banner found!",
                                                });
                                            });
                                        </script>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-outline-dark">Create New Banner</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

