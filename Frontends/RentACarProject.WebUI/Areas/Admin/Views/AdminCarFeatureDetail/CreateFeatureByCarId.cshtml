@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Features Addition Page</h4>
                        <p class="card-subtitle mb-4">
                            This page is for adding features to the car.
                        </p>
                        <form method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model[i].FeatureID" />
                                    <input type="hidden" asp-for="@Model[i].Name" />
                                    <input type="checkbox" class="form-check-input" />
                                    <label class="form-check-label">@Model[i].Name</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-primary">Assign Features to the Car</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
