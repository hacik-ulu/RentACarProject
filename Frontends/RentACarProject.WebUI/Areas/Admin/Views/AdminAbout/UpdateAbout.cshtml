@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update About Page</h4>
                        <p class="card-subtitle mb-4">
                            You can edit the information in the "About Us" section found in the "About" section of the homepage.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="AboutId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" oninput="this.value = this.value.replace(/[^a-zA-Z\s]/g, '')">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea rows="5" asp-for="Description" class="form-control" oninput="this.value = this.value.replace(/[^a-zA-Z\s]/g, '')"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputimageUrl">Image Url</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="ImageUrl">
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save About</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


