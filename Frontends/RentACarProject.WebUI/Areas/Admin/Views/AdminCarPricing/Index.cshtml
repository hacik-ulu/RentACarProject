@using Microsoft.Data.SqlClient
@model List<ResultCarPricingListWithModelDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int itemsPerPage = 5; // Her sayfada gösterilecek araç kiralama ücreti sayısı
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int count = (currentPage - 1) * itemsPerPage; // Sayfa başına gösterilecek araç kiralama ücreti sayısı
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Pricing List</h4>
                        <p class="card-subtitle mb-4">
                            You can add new car price, edit existing price, and remove a price from here. To ensure data consistency in the theme, enter data in multiples of three.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand</th>
                                        <th>Model</th>
                                        <th>Daily Price</th>
                                        <th>Weekly Price</th>
                                        <th>Monthly Price</th>
                                        <th>Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr id="car-@item.CarID">
                                                <th scope="row">@count</th>
                                                <td>@item.Brand</td>
                                                <td>@item.Model</td>
                                                <td>@item.DailyAmount</td>
                                                <td>@item.WeeklyAmount</td>
                                                <td>@item.MonthlyAmount</td>
                                                <td><a href="/Admin/AdminCarPricing/RemoveCarPricing/@ViewBag.CarPricingID" class="btn btn-outline-danger">Remove</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8">No Car Price found!</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminCarPricing/CreateCarPricing/" class="btn btn-outline-dark">Create New Car Pricing</a>
                        </div>
                        @if (Model != null && Model.Count > 0)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        <li class="page-item @(currentPage == i ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .highlight {
        background-color: yellow; /* Vurgu rengi */
        transition: background-color 0.5s ease; /* Geçiş efekti */
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const params = new URLSearchParams(window.location.search);
        const page = params.get('page'); // Sayfa numarasını al
        const hash = window.location.hash; // URL'deki hash

        if (hash && hash.startsWith("#car-")) {
            const carElement = document.querySelector(hash);

            if (carElement) {
                // Sayfayı yüklerken, ilgili arabaya kaydırma yap
                carElement.scrollIntoView({ behavior: "smooth", block: "center" });

                // Vurgulama için kısa süreliğine bir CSS sınıfı ekle
                carElement.classList.add("highlight");

                // Belirli bir süre sonra vurgulamayı kaldır
                setTimeout(() => {
                    carElement.classList.remove("highlight");
                }, 3000); // 3 saniye sonra vurguyu kaldır
            }
        }
    });
</script>
