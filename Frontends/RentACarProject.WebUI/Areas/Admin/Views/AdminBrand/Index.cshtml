@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Brand Features List</h4>
                        <p class="card-subtitle mb-4">
                            You can add new brands, edit existing brands, and remove a brand from here.To ensure data consistency in the theme, enter data in multiples of three.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand</th>
                                        <th>Remove</th>
                                        <th>Update</th>
                                        <th>Cars of The Brand</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><a href="/Admin/AdminBrand/RemoveBrand/@item.BrandID" class="btn btn-outline-danger">Remove</a></td>
                                                <td><a href="/Admin/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Update</a></td>
                                                <td><a href="/Admin/AdminBrand/UpdateBrand/@item.BrandID" class="btn btn-outline-success">Cars of The Brand</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <script>
                                            $(document).ready(function () {
                                                Swal.fire({
                                                    icon: "error",
                                                    title: "Oops...",
                                                    text: "No Brand found!",
                                                });
                                            });
                                        </script>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminBrand/CreateBrand/" class="btn btn-outline-dark">Create New Brand</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


