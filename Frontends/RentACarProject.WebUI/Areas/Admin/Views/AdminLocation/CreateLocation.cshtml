@model CreateLocationDto
@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">New Location Information Entry</h4>
                        <p class="card-subtitle mb-4">
                            This is the page where location information Location the points where vehicles are picked up and delivered is entered.
                            Fill in the information completely.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Location Name</label>
                                <input type="text" class="form-control" id="featureName" name="Name" asp-for="Name" oninput="this.value = this.value.replace(/[^a-zA-ZçÇğĞıİöÖşŞüÜ\s]/g, '')">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Location</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
