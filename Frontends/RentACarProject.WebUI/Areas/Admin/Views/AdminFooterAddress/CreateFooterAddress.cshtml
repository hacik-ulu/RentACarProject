@model CreateFooterAddressDto

@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">New Address Information Entry</h4>
                        <p class="card-subtitle mb-4">You can enter the information for the address area from the panel below. Please only make 1 data entry to maintain theme integrity. If you already have data, please edit it. If you make a new data entry, delete the previous one.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputAddress">Address</label>
                                <input type="text" class="form-control" id="exampleInputAddress" asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Description</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Phone Number</label>
                                <input type="tel" class="form-control" id="exampleInputPhone" asp-for="Phone">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputMail">Email Address</label>
                                <input type="email" class="form-control" id="exampleInputMail" asp-for="Email">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Address</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
