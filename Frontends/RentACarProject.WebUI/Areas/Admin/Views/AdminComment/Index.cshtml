@model List<ResultCommentDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Comment List</h4>
                        <p class="card-subtitle mb-4">
                            You can see the list of comments made about blogs on this page.
                            You can remove or reactivate relevant comments.
                            You can use the buttons under the comments for this.
                        </p>
                        @foreach (var item in Model)
                        {
                            count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Blog Title - @item.Title</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name -  @item.CreatedDate.ToShortDateString()</h4>
                                        <p class="card-text">
                                            @item.Description
                                        </p>
                                        <p><a href="/Admin/AdminComment/RemoveCommentByAllCommentList/@item.CommentID" class="btn btn-outline-danger">Remove</a></p>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (Model != null && Model.Count > 0)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        <li class="page-item @(currentPage == i ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



