@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Service Information Page</h4>
                        <p class="card-subtitle mb-4">
                            You can perform the operations on the admin side of the service list in the home page and services section from the page below.
                            To maintain theme integrity, make 4 service entries.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="ServiceId" />
                            <div class="form-group">
                                <label for="exampleInputTitle">Service Name</label>
                                <input type="text" class="form-control" id="featureName" name="Title" asp-for="Title" oninput="this.value = this.value.replace(/[^a-zA-ZçÇğĞıİöÖşŞüÜ\s]/g, '')">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Description</label>
                                <input type="text" class="form-control" id="featureName" name="Description" asp-for="Description">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Icon Url</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="ImageUrl" oninput="removeNumbers(this)" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Service</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
