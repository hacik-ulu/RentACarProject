@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluId">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Service Information Area</h4>
                        <p class="card-subtitle mb-4">
                            You can perform the operations on the admin sIde of the service list in the home page and services section from the page below.
                            To maintain theme integrity, make 4 service entries.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Service Name</th>
                                        <th>Description</th>
                                        <th>Icon-Url</th>
                                        <th>Remove</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>
                                                <td>@item.ImageUrl</td>
                                                <td><a href="/Admin/AdminService/RemoveService/@item.ServiceId" class="btn btn-outline-danger">Remove</a></td>
                                                <td><a href="/Admin/AdminService/UpdateService/@item.ServiceId" class="btn btn-outline-success">Update</a></td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <script>
                                            $(document).ready(function () {
                                                Swal.fire({
                                                    icon: "error",
                                                    title: "Oops...",
                                                    text: "No Service found!",
                                                });
                                            });
                                        </script>
                                    }
                                </tbody>
                            </table>
                            <br />
                            <a href="/Admin/AdminService/CreateService/" class="btn btn-outline-dark">Create New Service</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


