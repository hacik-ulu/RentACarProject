@model List<ResultCarDescriptionDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int itemsPerPage = 5;
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int count = (currentPage - 1) * itemsPerPage;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car List</h4>
                        <p class="card-subtitle mb-4">
                            You can perform operations such as adding, deleting, updating, searching, and listing related to car descriptions on this page.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Car Details</th>
                                        <th>Update</th>
                                        <th>Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.CarDetailsAsString</td> 
                                                <td>
                                                    <a href="/Admin/AdminCarDescription/UpdateCarDescription/@item.CarDescriptionID" class="btn btn-outline-success">Update</a>
                                                </td>
                                                <td>
                                                    <a href="/Admin/AdminCarDescription/RemoveCarDescription/@item.CarDescriptionID" class="btn btn-outline-danger">Remove</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center">No Car Descriptions found.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <a href="/Admin/AdminCarDescription/CreateAdminCarDescription/" class="btn btn-outline-dark">Create New Car</a>
                        </div>
                        @if (Model != null && Model.Count > 0)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        <li class="page-item @(currentPage == i ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
