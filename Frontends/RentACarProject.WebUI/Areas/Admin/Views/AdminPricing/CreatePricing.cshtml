@model CreatePricingDto

@{
    ViewData["Title"] = "CreatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">New Pricing Period Entry</h4>
                        <p class="card-subtitle mb-4">You can enter data into the payment period field from the panel below.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Pricing Period Title</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" oninput="this.value = this.value.replace(/[^a-zA-ZçÇğĞıİöÖşŞüÜ\s]/g, '')">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Save Pricing Period</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

